generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SELLER
  ADMIN
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  phone    String?
  role     UserRole @default(SELLER)

  @@map("users")
}

model Category {
  id        String    @id @default(uuid())
  title     String
  slug      String    @unique
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @map("updated_at")

  @@map("categories")
}
